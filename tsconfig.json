{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@v1config/*": [
        "api/v1/config/*"
      ],
      "@v1types/*": [
        "api/v1/types/*"
      ],
      "@v1routes/*": [
        "api/v1/routes/*"
      ],
      "@v1controllers/*": [
        "api/v1/controllers/*"
      ],
      "@v1models/*": [
        "api/v1/models/*"
      ],
      "@v1services/*": [
        "api/v1/services/*"
      ],
      "@v1validators/*": [
        "api/v1/validators/*"
      ]
    }
  }
}